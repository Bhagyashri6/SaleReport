<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3"
    android:weightSum="2">

    <LinearLayout
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/pink_gradient"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="75dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:text="Chanrakant Kshirsagar"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/pink_dark_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:text="Mumbai"
                android:gravity="center"
             android:layout_margin="6dp"
                android:textColor="#FFF"
               android:textSize="12sp"
                android:layout_height="25dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
    android:scaleType="fitCenter"
            android:src="@drawable/halfcircle_shapeee"
            android:layout_width="match_parent"
            android:layout_height="70dp" />

    </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:weightSum="3"
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:weightSum="2"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:background="#fff"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView
                android:layout_weight="1.4"
                android:layout_margin="5dp"
                android:src="@drawable/chart_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:layout_weight="0.6"
                android:text="Sales"
               android:gravity="center"

                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:background="#fff"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:src="@drawable/briefcase_check"
                    android:layout_width="80dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_weight="1"
                    android:text="PurChase"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:weightSum="2"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:background="#fff"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:src="@drawable/square_inc_cash"
                    android:layout_width="80dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_weight="1"
                    android:text="Pay"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:background="#fff"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:src="@drawable/basket"
                    android:layout_width="80dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_weight="1"
                    android:text="Order"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:weightSum="2"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:background="#fff"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:src="@drawable/bank"
                    android:layout_width="80dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_weight="1"
                    android:text="Bank"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="#fff"
                android:layout_height="match_parent">   </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
